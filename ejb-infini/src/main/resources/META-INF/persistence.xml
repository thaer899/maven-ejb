<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ejb-infini">
		<jta-data-source>java:jboss/datasources/InfiniDS</jta-data-source>
		<class>tn.esprit.ejbinfini.entities.Address</class>
		<class>tn.esprit.ejbinfini.entities.Classe</class>
		<class>tn.esprit.ejbinfini.entities.Module</class>
		<class>tn.esprit.ejbinfini.entities.ModuleClasse</class>
		<class>tn.esprit.ejbinfini.entities.ModuleClassePK</class>
		<class>tn.esprit.ejbinfini.entities.Person</class>
		<class>tn.esprit.ejbinfini.entities.Student</class>
		<class>tn.esprit.ejbinfini.entities.Teacher</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
	<persistence-unit name="ejb-infini-postgres">
		<jta-data-source>java:jboss/datasources/InfiniPostgreSqlDS</jta-data-source>
		<class>tn.esprit.ejbinfini.entities.Address</class>
		<class>tn.esprit.ejbinfini.entities.Classe</class>
		<class>tn.esprit.ejbinfini.entities.Module</class>
		<class>tn.esprit.ejbinfini.entities.ModuleClasse</class>
		<class>tn.esprit.ejbinfini.entities.ModuleClassePK</class>
		<class>tn.esprit.ejbinfini.entities.Person</class>
		<class>tn.esprit.ejbinfini.entities.Student</class>
		<class>tn.esprit.ejbinfini.entities.Teacher</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
